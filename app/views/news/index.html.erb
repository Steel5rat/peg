<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Image url</th>
    <th>Is important</th>
    <th>Keywords</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.body %></td>
    <td><%= news.image_url %></td>
    <td><%= news.is_important %></td>
    <td><%= news.keywords %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

