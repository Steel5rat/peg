<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Is important</th>
    <th>Keywords</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<%  @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= replaceImgTags news.body %></td> <!-- all images wrapped by <div class="imgInNews"> just for lulz and format -->
		
	
    <td><%= news.is_important %></td>
    <td><%= news.keywords %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) if logged?%></td>
    <td><%= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' } if logged?%></td>    
  </tr>
<% end %>
</table>
<%= will_paginate @news %> <!-- page navigation-->
<br/>

<%= link_to 'New News', new_news_path if logged?%>
