<p id="notice"><%= notice %></p>
<% if logged?%>
	<%= link_to 'Log off', login_delete_path %>
	<%= link_to 'Admins list', admins_path %>
<% else %>
	<%= form_tag(login_new_path, :method => "post") do %>
	  <div class="field">
		<%= label_tag(:login) %><br />
		<%= text_field_tag(:name) %>
	  </div>
	  <div class="field">
		<%= label_tag(:password) %><br />
		<%= text_field_tag(:password) %>
	  </div>
	  <%= submit_tag('Login') %>  
	<% end %>
<% end %>
<br/>
<%= link_to 'Back to site', root_path %>
